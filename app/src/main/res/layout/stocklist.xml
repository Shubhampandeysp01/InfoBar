<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainConst">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/firstConst"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="@+id/mainConst"
            app:layout_constraintTop_toTopOf="@+id/mainConst"
            app:layout_constraintWidth_percent="0.7">

            <TextView
                android:id="@+id/nameStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/infosys"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/firstConst"
                app:layout_constraintStart_toStartOf="@+id/firstConst"
                app:layout_constraintTop_toTopOf="@+id/firstConst" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:id="@+id/mcapconstraint"
                android:layout_height="match_parent"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintEnd_toEndOf="@+id/firstConst">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/mcapconstraint"
                    app:layout_constraintBottom_toBottomOf="@+id/mcapconstraint"
                    app:layout_constraintStart_toStartOf="@+id/mcapconstraint"
                    app:layout_constraintEnd_toEndOf="@+id/mcapconstraint"
                    android:text="hbsbdbhdcbh"
                    android:id="@+id/marketCapital"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/secondConst"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="@+id/mainConst"
            app:layout_constraintTop_toTopOf="@+id/mainConst"
            app:layout_constraintWidth_percent="0.30">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/thirdConst"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintTop_toTopOf="@+id/secondConst">

                <TextView
                    android:id="@+id/marketPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12,235"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/thirdConst"
                    app:layout_constraintEnd_toEndOf="@+id/thirdConst"
                    app:layout_constraintStart_toStartOf="@+id/thirdConst" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fourthConst"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/secondConst"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintStart_toStartOf="@+id/secondConst"
                app:layout_constraintWidth_percent="0.5">

                <TextView
                    android:id="@+id/profitLoss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="2.48"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/fourthConst"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/fourthConst"
                    app:layout_constraintTop_toTopOf="@+id/fourthConst" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fifthConst"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/secondConst"
                app:layout_constraintEnd_toEndOf="@+id/secondConst"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintWidth_percent="0.5">

                <TextView
                    android:id="@+id/percentStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="2.48%"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/fifthConst"
                    app:layout_constraintEnd_toEndOf="@+id/fifthConst"
                    app:layout_constraintStart_toStartOf="@+id/fifthConst"
                    app:layout_constraintTop_toTopOf="@+id/fifthConst" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>